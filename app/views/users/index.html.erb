<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="text-center">Dev Match Community</h1>
    <p class="text-center">Welcome to Dev Match. Users must fill out a profile to be seen by the community.</p>
    <ul class="list-unstyled">
      <% @users.each do |user| %>
        <% if user.profile %>
          <li>
            <%= link_to user do %>
              <div class="well row<%= cycle(' white-bg', '') %>">
                <div class="col-sm-4 text-center">
                  <% if user.profile.avatar %>
                      <%= image_tag user.profile.avatar.url(:thumb) %>
                  <% end %>
                </div>
                <div>
                  <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                  <p><%= user.profile.job_title %>
                  <% if user.plan_id == 2 %>
                    <span class="label label-danger">PRO</span></p>
                  <% end %>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>